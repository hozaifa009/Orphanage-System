    <?php
        $myfile= fopen ("activities.txt","r+") or die("unable to open!");
        while(!feof($myfile))
        {
            $line = fgets($myfile);
            $arrayline=explode("~",$line);
            for($i=0;$i<count($arrayline);$i++)
            {
                echo"<td>".$arrayline[$i]."</td>";
            }
            echo "<tr>"."</tr>";
        }
        fclose($myfile);
    ?> 
