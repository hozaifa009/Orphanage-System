$Found="no";
function getRowById ($filename,$Orphan_ID)
{
        $userfile = fopen($filename,"r");
        $ID = $Orphan_ID;                                   //hena bashoof anhy orphan 3ayz 23ml save llhagat el 2t3amltlo
        $flag=0;
        while(!feof ($userfile))
        {
            $Line = fgets($userfile);
            $Arrayline = explode("~", $Line);
            //echo $Arrayline[0]."<br>";
            if($Arrayline[0] ==  $ID)
            {
                $Found=$Arrayline[1];                                             //return to the other function which will wrute the orphan needed
                echo $Found."<br>";
                $flag=1;
                StoreRecord("DailyActy.txt.txt",$Found);
                return $Found;
            }
        }
        if($flag == 1)
        {
            echo"found";
        }
        else{
        echo"NOT found";
        }
    }
    getRowByID("User.txt.txt","3");                                        //3 di hatkoon input hasab el usertype
     function StoreRecord($filename,$Found)
     {
         $Daily=fopen($filename,"a+");
         fwrite($Daily,$Found."~");
         fclose($Daily);
     }
